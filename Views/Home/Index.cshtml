@model System_Profiling_Utility.ViewModels.DashboardOverviewViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<h1 class="mb-4"><i class="bi bi-house-door"></i> ~/dashboard</h1>

<div class="row">
    <div class="col-lg-8">
        <!-- Operating System Card -->
        <div class="card mb-3">
            <div class="card-header"><strong>Operating System</strong></div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <span>Version:</span> <strong>@Model.OSVersion</strong>
                </li>
                <li class="list-group-item">
                    <span>Architecture:</span> <strong>@Model.OSArchitecture</strong>
                </li>
            </ul>
        </div>

        <!-- Processor Card -->
        <div class="card mb-3">
            <div class="card-header"><strong>Processor (CPU)</strong></div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <span>Name:</span> <strong>@Model.ProcessorName</strong>
                </li>
                <li class="list-group-item">
                    <span>Logical Cores:</span> <strong>@Model.ProcessorCount</strong>
                </li>
            </ul>
        </div>

        <!-- Memory Card -->
        <div class="card mb-3">
            <div class="card-header"><strong>Memory (RAM)</strong></div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <span>Total Memory:</span> <strong>@Model.TotalMemoryGb GB</strong>
                </li>
            </ul>
        </div>
    </div>
</div>