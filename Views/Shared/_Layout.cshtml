<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - System Utilities</title>
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
    <!-- Google Font for our terminal look -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@400;700&display=swap" rel="stylesheet">

    <!-- Generated using sass:watch -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- Sidebar Navigation -->
    <div class="sidebar d-flex flex-column p-3">
        <a asp-controller="Home" asp-action="Index" class="sidebar-title">
            <span>./System_Utilities</span><span class="blinking-cursor">_</span>
        </a>
        
        <hr class="divider" />

        <ul class="nav nav-pills flex-column mb-auto">
            
            <li class="nav-item">
                <a asp-controller="Home" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">
                    <i class="bi bi-house-door"></i> <!-- FIX: Correct icon name -->
                    ~/dashboard
                </a>
            </li>
            <li class="nav-item">
                <a asp-controller="Home" asp-action="Graphics" class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Graphics" ? "active" : "")">
                    <i class="bi bi-display"></i> <!-- FIX: Added correct icon -->
                    ~/graphics
                </a>
            </li>
            <li class="nav-item">
                <a asp-controller="Home" asp-action="Storage" class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Storage" ? "active" : "")">
                    <i class="bi bi-device-hdd"></i> <!-- FIX: Added correct icon -->
                    ~/storage
                </a>
            </li>
        </ul>

        <!-- FIX: Added missing colon in style -->
        <hr class="divider" />
        <div>
            <small class="text-muted">user: guest@localhost</small>
        </div>
    </div>

    <main class="main-content" role="main">
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
